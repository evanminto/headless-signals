{
  "name": "@evanminto/headless-signals",
  "description": "Experimental collection of headless components/hooks, implemented with Preact Signals",
  "version": "0.3.0",
  "main": "./dist/headless-signals/index.js",
  "type": "module",
  "repository": "git@github.com:evanminto/headless-signals.git",
  "author": "Evan Minto <evan.minto@gmail.com>",
  "license": "MIT",
  "exports": {
    ".": "./dist/headless-signals/index.js",
    "./components": "./dist/components/components.js",
    "./tools": "./dist/tools/tools.js",
    "./preact": "./dist/preact/preact.js"
  },
  "scripts": {
    "start": "parcel watch",
    "build": "parcel build",
    "demo:preact": "parcel serve ./demo/preact/index.html",
    "test": "vitest"
  },
  "targets": {
    "headless-signals": {
      "source": "./src/index.js",
      "isLibrary": true,
      "outputFormat": "esmodule",
      "context": "browser",
      "includeNodeModules": false
    },
    "components": {
      "source": "./src/components.js",
      "isLibrary": true,
      "outputFormat": "esmodule",
      "context": "browser",
      "includeNodeModules": false
    },
    "tools": {
      "source": "./src/tools.js",
      "isLibrary": true,
      "outputFormat": "esmodule",
      "context": "browser",
      "includeNodeModules": false
    },
    "preact": {
      "source": "./src/preact.js",
      "isLibrary": true,
      "outputFormat": "esmodule",
      "context": "browser",
      "includeNodeModules": false
    }
  },
  "dependencies": {
    "@preact/signals": "^1.2.3",
    "@preact/signals-core": "^1.6.0",
    "preact": "^10.21.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^9.3.0",
    "htm": "^3.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "parcel": "^2.12.0",
    "prettier": "^3.2.5",
    "vitest": "^1.6.0"
  }
}
