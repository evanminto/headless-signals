{
  "name": "@evanminto/headless-signals",
  "description": "Experimental collection of headless components/hooks, implemented with Preact Signals",
  "version": "0.4.2",
  "main": "./dist/headless-signals/index.js",
  "type": "module",
  "repository": "git@github.com:evanminto/headless-signals.git",
  "author": "Evan Minto <evan.minto@gmail.com>",
  "license": "MIT",
  "exports": {
    ".": "./dist/index.js",
    "./components": "./dist/components.js",
    "./tools": "./dist/tools.js",
    "./preact": "./dist/preact.js"
  },
  "scripts": {
    "start": "parcel watch",
    "build:src": "parcel build",
    "build:types": "tsc src/index.js --allowJs --declaration --emitDeclarationOnly --declarationDir dist",
    "build": "yarn run build:src && yarn run build:types",
    "demo:preact": "parcel serve ./demo/preact/index.html",
    "test": "vitest"
  },
  "targets": {
    "headless-signals": {
      "source": "./src/index.js",
      "isLibrary": true,
      "outputFormat": "esmodule",
      "context": "browser",
      "includeNodeModules": false,
      "distDir": "./dist/"
    },
    "components": {
      "source": "./src/components.js",
      "isLibrary": true,
      "outputFormat": "esmodule",
      "context": "browser",
      "includeNodeModules": false,
      "distDir": "./dist/"
    },
    "tools": {
      "source": "./src/tools.js",
      "isLibrary": true,
      "outputFormat": "esmodule",
      "context": "browser",
      "includeNodeModules": false,
      "distDir": "./dist/"
    },
    "preact": {
      "source": "./src/preact.js",
      "isLibrary": true,
      "outputFormat": "esmodule",
      "context": "browser",
      "includeNodeModules": false,
      "distDir": "./dist/"
    }
  },
  "dependencies": {
    "@preact/signals": "^1.2.3",
    "@preact/signals-core": "^1.6.0",
    "preact": "^10.21.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^9.3.0",
    "htm": "^3.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "parcel": "^2.12.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
